<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">
            @android:color/transparent
        </item>
    </style>

    <style name="Text.Headline1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeH1</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Headline2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeH2</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Headline3" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeH3</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Headline4" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeH4</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Headline5" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeH5</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Headline6" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeH6</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Subtitle1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSubtitle1</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Body1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeBody1</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Body2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeBody2</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Caption1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeCaption</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.LightItalic" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeCaption</item>
        <item name="android:fontFamily">@font/open_sans_light_italic</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_large</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_large</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_large</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_large</item>
        <!-- Label when focused -->
        <item name="hintTextColor">@color/colorAccent</item>
        <!-- Label when unfocused and hint -->
        <item name="android:textColorHint">@color/greyLight</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <!-- Breaks the style currently>
        <item name="materialThemeOverlay">@style/EditTextOverlay</item-->
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/textSizeCaption</item>
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="EditTextOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/EditText.Body1</item>
    </style>

    <style name="EditText.Body1" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:height">@dimen/spacing_xlarge</item>
        <item name="android:textSize">@dimen/textSizeBody1</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@color/greyExtraLight</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">
            @android:color/transparent
        </item>
    </style>

    <style name="Button.Link" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:height">@dimen/spacing_large</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeCaption</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inset">@null</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">1600dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
